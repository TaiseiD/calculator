<body>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: inputs
            size_hint_y: 0.2

        GridLayout:
            cols: 5
            spacing: 5

            Button:
                text: "7"
                on_press: root.number_clicked(self.text)
            Button:
                text: "8"
                on_press: root.number_clicked(self.text)
            Button:
                text: "9"
                on_press: root.number_clicked(self.text)
            Button:
                text: "del"
                on_press: root.delete_last()
            Button:
                text: "clr"
                on_press: root.clear()
            Button:
                text: "4"
                on_press: root.number_clicked(self.text)
            Button:
                text: "5"
                on_press: root.number_clicked(self.text)
            Button:
                text: "6"
                on_press: root.number_clicked(self.text)
            Button:
                text: "*"
                on_press: root.number_clicked(self.text)
            Button:
                text: "/"
                on_press: root.number_clicked(self.text)
            Button:
                text: "1"
                on_press: root.number_clicked(self.text)
            Button:
                text: "2"
                on_press: root.number_clicked(self.text)
            Button:
                text: "3"
                on_press: root.number_clicked(self.text)
            Button:
                text: "+"
                on_press: root.number_clicked(self.text)
            Button:
                text: "-"
                on_press: root.number_clicked(self.text)
            Button:
                text: "0"
                on_press: root.number_clicked(self.text)
            Button:
                text: "."
                on_press: root.number_clicked(self.text)
            Button:
                text: "("
                on_press: root.number_clicked(self.text)
            Button:
                text: ")"
                on_press: root.number_clicked(self.text)
            Button:
                text: "="
                on_press: root.calculate_result()


<CrashScreen>:
    canvas:
        Color:
            rgb: (0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: crash_label
        text: "CRITICAL_ERROR: BAWAL MAG NO!!!!!"
        halign: 'center'
        font_size: '18sp'
        color: (1, 1, 1, 1)


<ValentineScreen>:
    canvas:
        Color:
            rgb: (1, 0.95, 0.98)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text: "Will you be my\nValentine?"
            pos_hint: {'center_x': .5, 'center_y': .65}
            color: (0.8, 0.1, 0.3, 1)
            font_size: '35sp'
            bold: True
            halign: 'center'

        Button:
            text: "YES!"
            size_hint: (0.35, 0.1)
            pos_hint: {'center_x': .3, 'center_y': .3}
            background_color: (1, 0.4, 0.6, 1)
            on_release: root.manager.current = 'final'

        Button:
            text: "No"
            size_hint: (0.25, 0.08)
            pos_hint: {'center_x': .7, 'center_y': .3}
            background_color: (0.7, 0.7, 0.7, 1)
            on_release: root.trigger_rejection_crash()


<FinalScreen>:
    canvas:
        Color:
            rgb: (1, 0.3, 0.5)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "TADAAA surprise babycakes \n happy valentines my pinakamamahal \n I LOVE YOU SAUR MUCHHH \n MWAHH MWAHH MWAHH"
        font_size: '20sp'
        bold: True
        halign: 'center'